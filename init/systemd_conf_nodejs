[Unit]
Description=Start MineOS minecraft front-end
After=network.target

[Service]
WorkingDirectory=/usr/games/minecraft
Type=forking
ExecStart=/usr/bin/nodejs service.js start
ExecStop=/usr/bin/nodejs service.js stop
ExecReload=/usr/bin/nodejs service.js restart
PIDFile=/var/run/mineos.pid
Restart=always

[Install]
WantedBy=multi-user.target